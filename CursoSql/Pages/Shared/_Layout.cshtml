<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Curso SQL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />  <!-- Confirme o caminho do seu CSS -->
    <style>
        /* Para alinhar os botões no navbar */
        .theme-selector {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .theme-btn {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            border: 2px solid #ccc;
            cursor: pointer;
            transition: border-color 0.3s ease;
            box-shadow: 0 0 3px rgba(0,0,0,0.2);
        }

            .theme-btn:hover {
                border-color: #666;
            }

            .theme-btn.selected {
                border-color: #000;
                box-shadow: 0 0 5px 2px #000;
            }

            .theme-btn[data-theme="light"] {
                background-color: #ffffff;
            }

            .theme-btn[data-theme="dark"] {
                background-color: #121212;
            }

            .theme-btn[data-theme="pink"] {
                background-color: #ffbfdc;
            }

            .theme-btn[data-theme="blue"] {
                background-color: #a4c8ff;
            }
    </style>
</head>
<body>
    <!-- Barra superior -->
    <header class="navbar navbar-dark px-3 mb-3 d-flex justify-content-between align-items-center">

        <a class="navbar-brand text-white" href="/">Curso SQL</a>
        <div class="theme-selector" aria-label="Seleção de tema">
            <button class="theme-btn" data-theme="light" title="Claro"></button>
            <button class="theme-btn" data-theme="dark" title="Escuro"></button>
            <button class="theme-btn" data-theme="pink" title="Rosa"></button>
            <button class="theme-btn" data-theme="blue" title="Azul"></button>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Menu lateral -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar px-3">
                <h5 class="mt-3">Lições</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/Lessons/Select">SELECT</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/Insert">INSERT</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/Update">UPDATE</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/Delete">DELETE</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/Where">WHERE</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/SelectDistinct">SELECT DISTINCT</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Lessons/SelectTop">SELECT TOP</a></li>
                </ul>
            </nav>

            <!-- Conteúdo principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="footer  text-white text-center py-3 mt-4">
        Curso SQL • criado por <a href="mailto:bruno.lico@gmail.com" class="text-white">bruno.lico@gmail.com</a> • <span id="currentYear"></span>
    </footer>


    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const body = document.body;
            const buttons = document.querySelectorAll(".theme-btn");

            function applyTheme(theme) {
                body.className = body.className
                    .split(" ")
                    .filter(c => !c.startsWith("theme-"))
                    .join(" ");
                body.classList.add("theme-" + theme);
                localStorage.setItem("selectedTheme", theme);

                buttons.forEach(btn => {
                    btn.classList.toggle("selected", btn.dataset.theme === theme);
                });
            }

            buttons.forEach(btn => {
                btn.addEventListener("click", () => {
                    applyTheme(btn.dataset.theme);
                });
            });

            const savedTheme = localStorage.getItem("selectedTheme") || "light";
            applyTheme(savedTheme);

                 const yearSpan = document.getElementById("currentYear");
        if (yearSpan) {
          yearSpan.textContent = new Date().getFullYear();
        }
        });
    </script>
</body>
</html>
